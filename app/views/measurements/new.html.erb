<h1>New measurement</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_tag(delineation_path, method: "post", multipart: true) do %>
        <div class="form-group">
          <%= label_tag 'file', 'Select ECG data file' %>
          <%= file_field_tag 'file', class: 'form-control' %>
        </div>
        <div class="form-group mt-3">
          <%= label_tag 'measurement_datetime', 'Start date and time of the measurements' %>
          <%= datetime_field_tag 'measurement_datetime', nil, class: 'form-control' %>
        </div>

        <div class="bg-info-secondary border border-primary p-3 my-3" style="border-radius: 12px;">
          <p class="text-primary mb-0"><i class="fas fa-info-circle text-primary pe-2"></i> Heart rate limits</p>
          <p class="text-secondary my-0">Set the minimum and maximum heart rate limits to detect artefacts</p>
        </div>

        <div class="form-group d-flex gap-3 align-items-center">
          <%= number_field_tag 'min_heart_rate_limit', 15, class: 'form-control' %>
          <p class="mb-0">to: </p>
          <%= number_field_tag 'max_heart_rate_limit', 300, class: 'form-control' %>
        </div>
        <%= submit_tag "Upload ECG Data", class: 'btn btn-primary mt-3 text-end' %>
      <% end %>
    </div>
  </div>
</div>
